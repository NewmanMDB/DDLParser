test/test: test/test.o test/test_ddl.o
	g++  -o $@ $+
	echo "Running test..."
	test/test

test/test_nacl_ddl.h: ddlt/ddlt test/test.ddl
	ddlt/ddlt -i test/test.ddl -t nacl_hpp -o test/test_nacl_ddl.h

test/test_nacl_ddl.cpp: ddlt/ddlt test/test.ddl
	ddlt/ddlt -i test/test.ddl -t nacl_cpp -I test_nacl_ddl.h -o test/test_nacl_ddl.cpp

