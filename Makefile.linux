	cp output/release/libddlparser.a /usr/local/lib && cp include/DDLParser.h /usr/local/include
	mkdir /usr/local/share/ddlt && cp util/*.lt util/extra.lua /usr/local/share/ddlt && cp ddlt/ddlt /usr/local/bin

