.SUFFIXES: .lua .lt

.lua.h:
	util/text2c $< $(*F) > $@

.lt.h:
	util/text2c $< $(*F)_template > $@

all: output/debug/libddlparser.a output/release/libddlparser.a ddlt/ddlt.exe test/test.exe

