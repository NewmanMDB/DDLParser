test/test_ddl.h: ddlt/ddlt.exe test/test.ddl
	ddlt/ddlt -i test/test.ddl -t hpp -o test/test_ddl.h

test/test_ddl.cpp: ddlt/ddlt.exe test/test.ddl
	ddlt/ddlt -i test/test.ddl -t cpp -I test_ddl.h -o test/test_ddl.cpp

test/test_ddl.o: test/test_ddl.cpp test/test_ddl.h
	g++ -O2 -Iinclude -D__WIN__ -Wall -Wno-format -o $@ -c test/test_ddl.cpp

test/test.o: test/test.cpp test/test_ddl.h
	g++ -O2 -Iinclude -D__WIN__ -Wall -Wno-format -o $@ -c test/test.cpp

test/test.exe: test/test.o test/test_ddl.o
	g++ -o $@ $+
	echo "Running test..."
	test/test

